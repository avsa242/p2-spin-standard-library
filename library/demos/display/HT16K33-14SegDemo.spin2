CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-modifiable constants:
    SER_BAUD    = 2_000_000
    LED         = cfg.LED1

    SCL_PIN     = 0
    SDA_PIN     = 1
    I2C_FREQ    = 400_000                       ' max is 400_000
    ADDR_BITS   = %000                          ' %000..%111

    ' number of digits/characters width and height the display has
    ' NOTE: The demo is written to work best with a 4x1 display
    WIDTH       = 4
    HEIGHT      = 1
' --


OBJ

    cfg : "boardcfg.p2eval"
    ser : "com.serial.terminal.ansi"
    disp: "display.led-seg.ht16k33"
    fs  : "string.float"
    
PUB main() | i, b

    setup()

    disp.blink_rate(2)
    demo_msg(@"DEMO")
    waitms(2_000)
    disp.blink_rate(0)
    waitms(1_000)

    demo_msg(@"CHAR")                    ' display printable ASCII chars

    repeat i from 32 to 126
        disp.pos_xy(0, 0)
        disp.putchar(i)
        waitms(100)
    waitms(2_000)


    demo_msg(@"STR")                     ' display strings

    disp.puts(@"This")
    waitms(1_000)
    disp.clear()
    disp.puts(@"is")
    waitms(1_000)
    disp.clear()
    disp.puts(@"the")
    waitms(1_000)
    disp.clear()
    disp.puts(@"STR")
    waitms(1_000)
    disp.clear()
    disp.puts(@"demo")
    waitms(2_000)


    demo_msg(@"HEX")                     ' display hexadecimal numbers

    repeat i from 0 to $1ff
        disp.pos_xy(0, 0)
        disp.puthex(i, 4)
    waitms(2_000)

    demo_msg(@"BIN")                     ' display binary numbers

    repeat i from 0 to %1111
        disp.pos_xy(0, 0)
        disp.printf(@"%04.4b", i)
        waitms(200)
    waitms(2_000)

    demo_msg(@"DEC")                     ' display decimal numbers

    repeat i from 0 to 1000
        disp.pos_xy(0, 0)
        disp.printf(@"%4.4d", i)
    waitms(2_000)

    demo_msg(@"TYPE")                    ' echo characters typed into the serial terminal

    repeat
        b := ser.getchar()
        disp.putchar(b)

PRI demo_msg(ptr_str)
' Clear the display, show a message, wait 2 seconds, then clear again
    disp.clear()
    disp.puts(ptr_str)
    waitms(2_000)
    disp.clear

PUB setup()

    ser.start(SER_BAUD)
    waitms(30)
    ser.clear()
    ser.strln(@"Serial terminal started")
    if disp.startx(SCL_PIN, SDA_PIN, I2C_FREQ, ADDR_BITS, WIDTH, HEIGHT)
        ser.strln(@"HT16K33 driver started")
        disp.defaults()
    else
        ser.str(@"HT16K33 driver failed to start - halting")
        repeat

DAT
