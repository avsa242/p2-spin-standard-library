CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-modifiable constants:
    SER_BAUD    = 2_000_000
    LED         = cfg.LED1

    I2C_SCL     = 24
    I2C_SDA     = 25
    I2C_HZ      = 400_000                       ' max is 400_000
    ADDR_BITS   = %000                          ' %000..%111

    ' number of digits/characters width and height the display has
    ' NOTE: The demo is written to work best with a 4x1 display
    WIDTH       = 4
    HEIGHT      = 1
' --


OBJ

    cfg : "core.con.boardcfg.p2eval"
    ser : "com.serial.terminal.ansi"
    disp: "display.led-seg.ht16k33"
    int : "string.integer"
    fs  : "string.float"
    
PUB Main() | i, b

    setup()

    disp.blinkrate(2)
    demomsg(string("DEMO"))
    waitms(2_000)
    disp.blinkrate(0)
    waitms(1_000)

    demomsg(string("CHAR"))

    repeat i from 32 to 126
        disp.position(0, 0)
        disp.char(i)
        waitms(100)
    waitms(2_000)


    demomsg(string("STR"))

    disp.str(string("This"))
    waitms(1_000)
    disp.clear()
    disp.str(string("is"))
    waitms(1_000)
    disp.clear()
    disp.str(string("the"))
    waitms(1_000)
    disp.clear()
    disp.str(string("STR"))
    waitms(1_000)
    disp.clear()
    disp.str(string("demo"))
    waitms(2_000)


    demomsg(string("HEX"))

    repeat i from 0 to $1ff
        disp.position(0, 0)
        disp.hex(i, 4)
    waitms(2_000)

    demomsg(string("BIN"))

    repeat i from 0 to %1111
        disp.position(0, 0)
        disp.bin(i, 4)
        waitms(200)
    waitms(2_000)

    demomsg(string("DEC"))

    repeat i from 0 to 1000
        disp.position(0, 0)
        disp.dec(i)
    waitms(2_000)

{ ' XXX disabled, for now - floating point support isn't currently functional
    demomsg(string("FLT"))

    disp.str(fs.floattostring(3.141))
    waitms(1_000)
    disp.str(fs.floattostring(31.41))
    waitms(1_000)
    disp.str(fs.floattostring(314.1))
    waitms(1_000)
    disp.str(fs.floattostring(3141.0))
    waitms(2_000)
}

    demomsg(string("TYPE"))

    repeat
        b := ser.charin
        disp.char(b)

PRI DemoMsg(ptr_str)
' Clear the display, show a message, wait 2 seconds, then clear again
    disp.clear()
    disp.str(ptr_str)
    waitms(2_000)
    disp.clear

PUB Setup()

    ser.start(SER_BAUD)
    waitms(30)
    ser.clear()
    ser.strln(string("Serial terminal started"))
    if disp.startx(I2C_SCL, I2C_SDA, I2C_HZ, ADDR_BITS, WIDTH, HEIGHT)
        ser.strln(string("HT16K33 driver started"))
        disp.defaults()
    else
        ser.str(string("HT16K33 driver failed to start - halting"))
        repeat

