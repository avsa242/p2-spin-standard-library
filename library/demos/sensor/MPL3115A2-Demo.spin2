CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-modifiable constants
    SER_BAUD    = 2_000_000

    { I2C configuration }
    SCL_PIN     = 0
    SDA_PIN     = 1
    I2C_FREQ    = 400_000                       ' max is 400_000
    ADDR_BITS   = 0
' --

OBJ

    cfg:    "boardcfg.p2eval"
    sensor:  "sensor.pressure.mpl3115a2"
    ser:    "com.serial.terminal.ansi"

PUB setup()

    ser.start(SER_BAUD)
    waitms(10)
    ser.clear()
    ser.strln(@"Serial terminal started")

    if (sensor.startx(SCL_PIN, SDA_PIN, I2C_FREQ))
        ser.strln(@"MPL3115A2 driver started")
    else
        ser.strln(@"MPL3115A2 driver failed to start - halting")
        repeat

    sensor.preset_active()                       ' set defaults, but enable
                                                '   sensor power
    demo()

#include "pressdemo.common.spin2h"              ' code common to all pressure demos

DAT
