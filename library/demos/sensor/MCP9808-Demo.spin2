CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-modifiable constants
    SER_BAUD    = 2_000_000

    { I2C configuration }
    SCL_PIN     = 0
    SDA_PIN     = 1
    I2C_FREQ    = 400_000                       ' max is 400_000
    ADDR_BITS   = 0                             ' %000..%111 (0..7)
' --

OBJ

    cfg:    "boardcfg.p2eval"
    sensor:  "sensor.temperature.mcp9808"
    ser:    "com.serial.terminal.ansi"

PUB setup()

    ser.start(SER_BAUD)
    waitms(10)
    ser.clear()
    ser.strln(@"Serial terminal started")

    if (sensor.startx(SCL_PIN, SDA_PIN, I2C_FREQ, ADDR_BITS))
        ser.strln(@"MCP9808 driver started")
    else
        ser.strln(@"MCP9808 driver failed to start - halting")
        repeat

    sensor.temp_scale(sensor.C)
    sensor.temp_res(0_0625)                      ' 0_0625, 0_1250, 0_2500, 0_5000
    demo()

#include "tempdemo.common.spin2h"               ' code common to all temp/RH demos

DAT
