CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-defined constants
    SER_BAUD    = 2_000_000
    LED         = cfg.LED1

    { I2C configuration }
    SCL_PIN     = 0
    SDA_PIN     = 1
    I2C_FREQ    = 400_000                       ' 400_000 max
' --

OBJ

    cfg     : "boardcfg.p2eval"
    ser     : "com.serial.terminal.ansi"
    iaq     : "sensor.iaq.sgp30"

VAR

    word _sn[3]

PUB main()

    setup()

    iaq.reset()                                 ' reset first for reliability

    iaq.serial_num(@_sn)

    ser.printf(@"SN: %04.4x%04.4x%04.4x\n\r", _sn[0], _sn[1], _sn[2])

    repeat
        ser.pos_xy(0, 5)
        ser.printf(@"CO2Eq: %5.5dppm\n\r", iaq.co2_equiv())
        ser.printf(@"TVOC: %5.5dppb", iaq.tvoc())
        waitms(1000)                            ' 1Hz rate for best performance

PUB setup()

    ser.start(SER_BAUD)
    waitms(30)
    ser.clear()
    ser.strln(@"Serial terminal started")
    if iaq.startx(SCL_PIN, SDA_PIN, I2C_FREQ)
        ser.strln(@"SGP30 driver started")
    else
        ser.strln(@"SGP30 driver failed to start - halting")
        repeat

DAT
