    See end of file for terms of use.
    --------------------------------------------
    NOTE: If a common EEPROM (e.g. AT24Cxxxx) is on the same I2C bus as the SSN,
        the driver may return data from it instead of the SSN. Make sure the EEPROM is
        somehow disabled or test the SSN using different I/O pins.
}

CON

    _clkfreq    = cfg._clkfreq_def
    _xtlfreq    = cfg._xtlfreq

' -- User-modifiable constants
    LED         = cfg.LED1
    SER_RX      = cfg.SER_RX
    SER_TX      = cfg.SER_TX
    SER_BAUD    = 2_000_000

    I2C_SCL     = 24
    I2C_SDA     = 25
    I2C_HZ      = 400_000
' --

OBJ

    cfg     : "core.con.boardcfg.p2eval"
    ser     : "com.serial.terminal.ansi"
    ssn     : "id.ssn.ds28cm00.i2c"

VAR

    byte _sn[8]

PUB Main() | i

    setup()
    ser.newline()
    ser.printf("Device Family: $")
    ser.hex(ssn.deviceid(), 2)
    ser.printf("\nSerial Number: $")
    ssn.sn(@_sn)
    repeat i from 0 to 7
        ser.hex(_sn.byte[i], 2)
    ser.printf("\nCRC: $%x, Valid: ", ssn.crc())
    case ssn.crcvalid()
        true: ser.printf("Yes\n")
        false: ser.printf("No\n")

    ser.printf("Halting")
    repeat

PUB Setup()

    repeat until ser.startrxtx(SER_RX, SER_TX, 0, SER_BAUD)
    waitms(30)
    ser.clear()
    ser.printf("Serial terminal started\n")
    if ssn.start(I2C_SCL, I2C_SDA, I2C_HZ)
        ser.printf("DS28CM00 driver started\n")
    else
        ser.printf("DS28CM00 driver failed to start - halting\n")
        ssn.stop()

DAT
