PUB magdata() | mx, my, mz

    repeat until mag.magdataready()
    mag.maggauss(@m[mag.X_AXIS], @m[mag.Y_AXIS], @m[mag.Z_AXIS])
    ser.str(@"Mag (Gs):  ")
    repeat axis from mag.X_AXIS to mag.Z_AXIS
        if (m[axis] < 0)
            sign := "-"
        else
            sign := " "
        ser.printf3(@"%c%d.%06.6d     ", sign, abs(m[axis] / 1_000_000), {
}       abs(m[axis] // 1_000_000))
    ser.newline()

PUB cal_mag()
' Calibrate the magnetometer
    ser.position(0, 5)
    ser.str(@"Calibrating magnetometer...")
    mag.calibratemag()
    ser.position(0, 5)
    ser.clearline()

