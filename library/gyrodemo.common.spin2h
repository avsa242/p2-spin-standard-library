PUB GyroData() | axis, g[3], sign
' Display gyroscope data
    repeat until gyro.gyrodataready()
    gyro.gyrodps(@g[gyro.X_AXIS], @g[gyro.Y_AXIS], @g[gyro.Z_AXIS])
    ser.str(@"Gyro (dps): ")
    repeat axis from gyro.X_AXIS to gyro.Z_AXIS
        if (g[axis] < 0)
            sign := "-"
        else
            sign := " "
        ser.printf(@"%c%d.%06.6d     ", sign, abs(g[axis]/1_000_000), {
}       abs(g[axis]//1_000_000))
    ser.newline()

PUB Cal_Gyro()
' Calibrate the gyroscope
    ser.position(0, 5)
    ser.str(@"Calibrating gyroscope...")
    gyro.calibrategyro()
    ser.position(0, 5)
    ser.clearline()

