CON

    XTAL        = cfg#XTAL
    XDIV        = cfg#XDIV
    XMUL        = cfg#XMUL
    XDIVP       = cfg#XDIVP
    XOSC        = cfg#XOSC
    XSEL        = cfg#XSEL
    XPPPP       = cfg#XPPPP
    CLOCKFREQ   = cfg#CLOCKFREQ
    SETFREQ     = cfg#SETFREQ
    ENAFREQ     = cfg#ENAFREQ

    LED         = cfg#LED1
    SER_RX      = cfg#SER_RX
    SER_TX      = cfg#SER_TX
    SER_BAUD    = 2_000_000

    COL_REG     = 0
    COL_SET     = COL_REG + 12
    COL_READ    = COL_SET + 20
    COL_PF      = COL_READ + 20

    CE_PIN      = 36
    CSN_PIN     = 37
    SCK_PIN     = 34
    MOSI_PIN    = 32
    MISO_PIN    = 33

OBJ

    cfg   : "core.con.boardcfg.p2eval"
    ser   : "com.serial.terminal.ansi"
    time  : "time"
    nrf24 : "wireless.transceiver.nrf24l01.spi.spin2"
    int   : "string.integer"

VAR

    long _fails, _expanded
    byte _ser_cog, _row

PUB Main

    Setup
    ser.NewLine
    _row := 3

    RX_ADDR
    TX_ADDR
    RF_PWR (1)
    RF_DR (1)
    ARC (1)
    ARD (1)
    DYNPD (1)
    ENAA (1)
    EN_ACK_PAY (1)
    EN_DPL (1)
    EN_DYN_ACK (1)
    EN_RXADDR (1)
    CRCO (1)
    CW (1)
    INTMASK (1)
    SETUP_AW (1)
    RF_CH (1)
    EN_CRC (1)

    Flash (LED, 100)

PUB RF_PWR(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from -18 to 0 step 6
            nrf24.TXPower (tmp)
            read := nrf24.TXPower
            Message ("RF_PWR", tmp, read)

PUB RF_DR(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to 2
            nrf24.Rate (lookupz(tmp: 250, 1000, 2000))
            read := nrf24.Rate
            Message ("RF_DR", lookupz(tmp: 250, 1000, 2000), read)

PUB ARC(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to 15
            nrf24.AutoRetransmitCount (tmp)
            read := nrf24.AutoRetransmitCount
            Message ("ARC", tmp, read)

PUB ARD(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 250 to 4000 step 250
            nrf24.AutoRetransmitDelay (tmp)
            read := nrf24.AutoRetransmitDelay
            Message ("ARD", tmp, read)

PUB DYNPD(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from %000_000 to %111_111
            nrf24.DynamicPayload (tmp)
            read := nrf24.DynamicPayload
            Message ("DYNPD", tmp, read)

PUB ENAA(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from %000_000 to %111_111
            nrf24.EnableAuto_Ack (tmp)
            read := nrf24.EnableAuto_Ack
            Message ("ENAA", tmp, read)

PUB EN_ACK_PAY(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to -1
            nrf24.EnableACK (tmp)
            read := nrf24.EnableACK
            Message ("EN_ACK_PAY", tmp, read)

PUB EN_DPL(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to -1
            nrf24.EnableDynPayload (tmp)
            read := nrf24.EnableDynPayload
            Message ("EN_DPL", tmp, read)

PUB EN_DYN_ACK(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to -1
            nrf24.DynamicACK (tmp)
            read := nrf24.DynamicACK
            Message ("EN_DYN_ACK", tmp, read)

PUB EN_RXADDR(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from %000_000 to %111_111
            nrf24.EnablePipe (tmp)
            read := nrf24.EnablePipe
            Message ("EN_RXADDR", tmp, read)

PUB CRCO(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 1 to 2
            nrf24.CRCLength (tmp)
            read := nrf24.CRCLength
            Message ("CRCO", tmp, read)

PUB CW(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to -1
            nrf24.CW (tmp)
            read := nrf24.CW
            Message ("CW", tmp, read)

PUB INTMASK(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from %000 to %111
            nrf24.IntMask (tmp)
            read := nrf24.IntMask
            Message ("INTMASK", tmp, read)

PUB SETUP_AW(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 3 to 5
            nrf24.AddressWidth (tmp)
            read := nrf24.AddressWidth
            Message ("SETUP_AW", tmp, read)

PUB RF_CH(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to 127
            nrf24.Channel (tmp)
            read := nrf24.Channel
            Message ("RF_CH", tmp, read)

PUB EN_CRC(reps) | tmp, read

    _row++
    repeat reps
        repeat tmp from 0 to -1
            nrf24.CRCCheckEnabled (tmp)
            read := nrf24.CRCCheckEnabled
            Message ("EN_CRC", tmp, read)

PUB RX_ADDR | addrbyte, addr_set[2], addr_read[2], tmp, pipe, status

    bytefill(@addr_set, $00, 8)
    repeat pipe from 0 to 5
        _row++
        ser.Position(COL_REG, _row)
        ser.printf("RXADDR%d", pipe)
        case pipe
            0, 1:
                bytefill(@addr_set, $E0 + pipe, 5)
            2..5:
                bytefill(@addr_set, $00, 8)
                addr_set.byte[0] := $E0 + pipe

        nrf24.RXAddr (@addr_set, pipe, nrf24#WRITE)

        ser.Position(COL_SET, _row)
        ser.printf("SET: ")
        case pipe
            0, 1:
                repeat tmp from 0 to 4
                    ser.Hex (addr_set.byte[tmp], 2)
            2..5:
                ser.Hex (addr_set.byte[0], 2)

        status := nrf24.Status
        bytefill(@addr_read, $00, 8)
        nrf24.RXAddr (@addr_read, pipe, nrf24#READ)
        ser.Position(COL_READ, _row)
        ser.printf("READ: ")
        case pipe
            0, 1:
                repeat tmp from 0 to 4
                    ser.Hex (addr_read.byte[tmp], 2)
            2..5:
                ser.Hex (addr_read.byte[0], 2)

        repeat tmp from 0 to 4
            status := (addr_set.byte[tmp] <> addr_read.byte[tmp])
        ser.Position(COL_PF, _row)
        if status
            ser.printf("FAIL")
        else
            ser.printf("PASS")

PUB TX_ADDR | addrbyte, addr_set[2], addr_read[2], tmp, status

    bytefill(@addr_set, $00, 8)
    repeat addrbyte from 0 to 5
        _row++
        ser.Position(COL_REG, _row)
        ser.printf("TXADDR")
        bytefill(@addr_set, $E0 + addrbyte, 5)
        nrf24.TXAddr (@addr_set, nrf24#WRITE)

        ser.Position(COL_SET, _row)
        ser.printf("SET: ")
        repeat tmp from 0 to 4
            ser.Hex (addr_set.byte[tmp], 2)

        bytefill(@addr_read, $00, 8)
        nrf24.TXAddr (@addr_read, nrf24#READ)

        ser.Position(COL_READ, _row)
        ser.printf("READ: ")
        repeat tmp from 0 to 4
            ser.Hex (addr_read.byte[tmp], 2)

        repeat tmp from 0 to 4
            status := (addr_set.byte[tmp] <> addr_read.byte[tmp])
        ser.Position(COL_PF, _row)
        if status
            ser.printf("FAIL")
        else
            ser.printf("PASS")

PUB TrueFalse(num)

    case num
        0: ser.printf("FALSE")
        -1: ser.printf("TRUE")
        OTHER: ser.printf("???")

PUB Message(field=string(""), arg1, arg2)

   case _expanded
        TRUE:
            ser.PositionX (COL_REG)
            ser.Str (field)

            ser.PositionX (COL_SET)
            ser.printf("SET: %d", arg1)

            ser.PositionX (COL_READ)
            ser.printf("READ: %d", arg2)

            ser.Chars (32, 3)
            ser.PositionX (COL_PF)
            PassFail (arg1 == arg2)
            ser.NewLine

        FALSE:
            ser.Position (COL_REG, _row)
            ser.Str (field)

            ser.Position (COL_SET, _row)
            ser.printf("SET: %d", arg1)

            ser.Position (COL_READ, _row)
            ser.printf("READ: %d", arg2)

            ser.Position (COL_PF, _row)
            PassFail (arg1 == arg2)
            ser.NewLine
        OTHER:
            ser.printf("DEADBEEF")

PUB PassFail(num)

    case num
        0: ser.printf("FAIL")
        -1: ser.printf("PASS")
        OTHER: ser.printf("???")

PUB Setup

    clkset(ENAFREQ, CLOCKFREQ, XSEL)
    repeat until _ser_cog := ser.StartRXTX (SER_RX, SER_TX, 0, SER_BAUD)
    ser.Clear
    ser.printf("Serial terminal started\n")
    if nrf24.Start (CE_PIN, CSN_PIN, SCK_PIN, MOSI_PIN, MISO_PIN, 5_000_000)
        ser.printf("nRF24L01+ driver started\n")
    else
        ser.printf("nRF24L01+ driver failed to start - halting\n")
        nrf24.Stop
        time.MSleep (500)
        Flash(LED, 500)

PUB Flash(led_pin, delay_ms)

    dirb[led_pin] := 1
    repeat
        !outb[led_pin]
        time.MSleep (delay_ms)

DAT
