PUB PressData() | press
' Display presserature sensor data
    press := sensr.presspascals()
    ser.printf(@"Press (hPa/mbar): %4.4d.%02.2d\n\r", (press / 1000), abs(press // 1000))

PUB TempData() | temp, tscl
' Display temperature sensor data
    temp := sensr.temperature()
    tscl := lookupz(sensr.tempscale(-2): "C", "F", "K")
    ser.printf(@"Temp. (deg %c): %3.3d.%02.2d\n\r", tscl, (temp / 100), abs(temp // 100))

PUB Demo()

    repeat
        repeat until sensr.pressdataready()
        ser.position(0, 3)
        pressdata()
        tempdata()
        waitms(250)

DAT
